# Example Environment Variables for Judge0 v7
# Copy this file to .env and update with your values

# ==============================================
# API SECURITY (REQUIRED - Change These!)
# ==============================================
AUTHN_TOKEN=your-secret-authentication-token-here
AUTHZ_TOKEN=your-secret-authorization-token-here

# ==============================================
# DATABASE CREDENTIALS
# ==============================================
POSTGRES_PASSWORD=your-secure-database-password-here

# ==============================================
# REDIS CREDENTIALS
# ==============================================
REDIS_PASSWORD=your-secure-redis-password-here

# ==============================================
# API PORT
# ==============================================
JUDGE0_PORT=2358

# ==============================================
# RESOURCE LIMITS
# ==============================================
# CPU time limit in seconds for code execution
CPU_TIME_LIMIT=15

# Extra CPU time buffer (seconds)
CPU_EXTRA_TIME=5

# Wall clock time limit (seconds)
WALL_TIME_LIMIT=30

# Memory limit in KB (256 MB = 256000 KB)
MEMORY_LIMIT=256000

# Maximum processes/threads per execution
MAX_PROCESSES=60

# Maximum queue size for submissions
MAX_QUEUE_SIZE=100

# ==============================================
# WORKER CONFIGURATION
# ==============================================
# Number of worker containers (scale based on load)
WORKER_COUNT=4

# Number of Rails threads per worker
RAILS_MAX_THREADS=8

# ==============================================
# OPTIONAL FEATURES
# ==============================================
# Enable synchronous result waiting
ENABLE_WAIT_RESULT=true

# Authentication header name (if using custom auth)
AUTHN_HEADER=X-Auth-Token

# Authorization header name (if using custom authz)
AUTHZ_HEADER=X-Auth-User
